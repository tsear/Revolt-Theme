{
  // Watch your root style.scss (which imports all partials)
  "liveSassCompile.settings.includeItems": [
    "/style.scss"
  ],

  // Donâ€™t compile these folders
  "liveSassCompile.settings.excludeList": [
    "/node_modules/**",
    "/.vscode/**"
  ],

  // Output compiled CSS (and map) into the theme root
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/"
    }
  ],

  // Turn maps back on
  "liveSassCompile.settings.generateMap": true,

  // Always compile on start & save
  "liveSassCompile.settings.compileOnStart": true,
  "liveSassCompile.settings.compileOnSave": true
}